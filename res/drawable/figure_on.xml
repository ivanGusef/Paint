<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>

        <shape>
            <solid android:color="@color/figure_unchecked"/>
            <padding
                android:bottom="2dp"
                android:left="3dp"
                android:right="3dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/figure_checked_border" />

            <solid android:color="@color/figure_checked" />

            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>