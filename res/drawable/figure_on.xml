<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>

        <shape>
            <solid android:color="@color/figure_unchecked"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/figure_checked_border" />

            <solid android:color="@color/figure_checked" />
        </shape>
    </item>

</layer-list>